
<p>
  <h1><%=@trail.name%></h1>
</p>

<img class="show-img" src="<%= @trail.img_url %>" alt="<%= @trail.name%>">

<p>Location: <%=@trail.location%></p>

<p>Difficulty: <%=@trail.difficulty%></p>

<p>Description: <%=@trail.attraction%></p>

<% @trail.favorites.each do |favorite| %>
  <p>Rating:<%= favorite.rating  %></p>
<% end %>

<%= form_for(@favorite) do |f| %>
  <%= f.hidden_field :trail_id, value: @trail.id %>
  <%= f.label :rate %>
  <%= f.number_field :rating %>
  <%= f.submit "Favorite This Trail" %>
<% end %>
</br>
<%= form_for(@review) do |f| %>
  <%= f.hidden_field :trail_id, value: @trail.id %>
  <%= f.text_area :text %>
  <%= f.submit "Leave Review" %>
<% end %>







