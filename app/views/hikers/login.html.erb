<div class="login-form">
  <h1>Login</h1>
  <br/>
  <% if @error %>
      <p><%= @error %></p>
  <% end %>
  <%= form_tag "/login_form" do %>
    <p><%= label_tag :username %></p>
    <p><%= text_field_tag :username %></p>
    <p><%= label_tag :password %></p>
    <p><%= password_field_tag :password%></p>
    <p id="centerlogin"><%= submit_tag "Login", class: "btn-custom" %></p>
  <% end %>
</div>
