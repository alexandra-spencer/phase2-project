<div class="col-md-6 col-md-offset-3">

	<div class="edit-hiker-form">

    <h2> Edit Profile </h2>

    <% if flash[:errors] %>
      <% flash[:errors].each do |error| %>
        <%= error %>
      <% end %>
    <% end %>

    <%= form_for @current_hiker do |f| %>

      <p><%= f.label :name %></p>
      <p><%= f.text_field :name %></p>
      <p><%= f.label :experience %></p>
      <p><%= f.select(:experience, ["Novice", "Intermediate", "Expert"], {}, {:class=>"form-control"}) %></p>
      <p><%= f.label "Picture" %></p>
      <p><%= f.file_field :avatar %></p>
      <p><%= f.submit "Update", class: 'btn-custom' %></p>
    <% end %>

	</div>

</div>
