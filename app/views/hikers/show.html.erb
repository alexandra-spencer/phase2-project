
  <h1> Welcome to Emerald Hikes, <%= @hiker.name %> </h1>

<div id="wrapper">
  <p><strong>Username:</strong><%= @hiker.username %></p>
  <p><strong> Experience Level:</strong> <%= @hiker.experience %></p>
  <p><strong> My Favorite Trails: </strong></p>



    <% @hiker.trails.each do |trail| %>
        <%= link_to(trail.name, trail_path(trail)) %> 
        ++ Rating: <%= @hiker.display_rating(trail.id)%>
        <p><img class="show-img" src=" <%= trail.img_url%>" alt="<%= trail.name%>" class="rounded-circle" width="500" height="400"></p>
    <% end %>

  <%# if @user.avatar.attached? %>
    <!--<img src= "<%#= url_for(@hiker.avatar.variant) %>"> -->
  <%# end %>



  <%= button_to "Edit Profile", edit_hiker_path(@hiker), method: :get %>

  <%= button_to "Logout", logout_path, method: :delete %>

  <%= button_to "Delete My Account", hiker_path(@hiker), method: :delete %>

</div>
